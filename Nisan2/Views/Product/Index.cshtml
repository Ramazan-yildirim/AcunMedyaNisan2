@model List<Nisan2.Models.Product>

<h2>Ürün Listesi</h2>
<a href="/Product/Create">Yeni Ürün Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price ₺</td>
                <td>@item.Stock</td>
                <td>
                    <a href="/Product/Details/@item.Id">Detaylar</a> |
                    <a href="/Product/Edit/@item.Id">Güncelle</a> |
                    <a href="/Product/Delete/@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
